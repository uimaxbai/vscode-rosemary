{
  "name": "rosemary",
  "displayName": "Rosemary",
  "description": "Syntax highlighting, IntelliSense, linting",
  "version": "1.0.1",
  "license": "MIT",
  "publisher": "Rosemary",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/uimaxbai/vscode-rosemary"
  },
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:rosemary"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "rosemary.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 10000,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "rosemary.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "languages": [
      {
        "id": "rosemary",
        "aliases": [
          "Rosemary",
          "rosemary"
        ],
        "extensions": [
          ".rsmy",
          ".rh"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "rosemary",
        "scopeName": "source.rosemary",
        "path": "./syntaxes/rosemary.tmLanguage.json"
      }
    ]
  },
  "main": "./client/out/main.js",
  "browser": "./dist/web/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run esbuild-base -- --minify",
    "compile": "tsc -b",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "watch": "tsc -b -w",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "open-in-browser": "vscode-test-web --extensionDevelopmentPath=. .",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "package": "vsce package",
    "esbuild-base": "esbuild ./client/src/extension.ts --bundle --outfile=client/out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --minify",
    "esbuild-watch": "npm run esbuild-base -- --minify --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.73.0",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-web": "*",
    "@vscode/vsce": "^2.19.0",
    "esbuild": "^0.17.19",
    "eslint": "^8.26.0",
    "mocha": "^9.2.1",
    "process": "^0.11.10",
    "ts-loader": "^9.2.2",
    "typescript": "^5.0.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {
    "@vscode/test-web": "^0.0.43",
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.8"
  }
}
